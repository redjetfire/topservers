= form_for @category do |f|
  - if @category.errors.any?
    #error_explanation
      %h2= "#{pluralize(@category.errors.count, "error")} prohibited this category from being saved:"
      %ul
        - @category.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :offsite
    = f.text_field :offsite
  .field
    = f.label :released
    = f.text_field :released
  .field
    = f.label :races
    = f.text_field :races
  .field
    = f.label :classes
    = f.text_field :classes
  .field
    = f.label :description
    = f.text_area :description, :size => "36x6"
  .field
    = f.label :expansion_list
    = f.text_area :expansion_list, :size => "36x6"
  %span.expansionhint (Please use ' , ' to split text.)
  %br
  %br
  .actions
    = f.submit '  Save  ', class: 'btn'
